#!/usr/bin/env bash

function main {
  set -e

  ensure_foreman_installed
  cp .env.sample .env
  bundle install
  rake db:setup db:schema:load db:migrate
}

function ensure_foreman_installed {
  hash foreman 2>/dev/null || {
    echo >&2 'Could not find `foreman` executable. Please install it.';
    false;
  }
}

main

